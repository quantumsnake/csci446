<% @world_articles.each do |world_article| %>
  <tr>
    <td><%= world_article.title %></td>
    <td><%= world_article.author %></td>
    <td><%= world_article.body %></td>
    <td><%= link_to 'Show', world_article %></td>
    <td><%= link_to 'Edit', edit_world_article_path(world_article) %></td>
    <td><%= link_to 'Destroy', world_article, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

